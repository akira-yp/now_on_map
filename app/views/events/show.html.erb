<h1>イベント詳細画面</h1>

<div id="mapid" style="width:400px; height:400px;"></div>

<div class="">
  <div class="">
    <%= @event.title %>
  </div>
  <div class="">
    <%= @event.location %>
  </div>
  <div class="">
    <%= @event.description %>
  </div>
  <div class="">
    <%= raw Rinku.auto_link(@event.official_page,:all,'target="_blank"') %>
  </div>
  <div class="">
    <%= l @event.start_date, format: :date %> ~ <%= l @event.end_date, format: :date %>
  </div>
</div>


<%= javascript_include_tag 'event_show' %>
