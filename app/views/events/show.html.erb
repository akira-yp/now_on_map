
<h1><%= @event.title %></h1>
<div id="favorite_area" class="">
  <%= render 'favorites/favorite', { favorite: @favorite, event: @event} %>
</div>
<div class="">
  <% @event.categories.each do | category | %>
    <span><%= category.name %></span>
  <% end %>
</div>
<div id="mapid" style="width:400px; height:400px;"></div>
<div class="">
  <% if @event.image.present? %>
    <%= image_tag @event.image.url %>
  <% end %>
</div>

<div class="">
  <div class="">
    <%= @event.location %>
  </div>
  <div class="">
    <%= @event.description %>
  </div>
  <div class="">
    <%= raw Rinku.auto_link(@event.official_page,:all,'target="_blank"') %>
  </div>
  <div class="">
    <%= l @event.start_date, format: :date %> ~ <%= l @event.end_date, format: :date %>
  </div>
</div>
<% if user_signed_in? %>
  <div class="">
    <% if @event.user == current_user %>
      <%= link_to t('view.edit'), edit_event_path(@event) %>
      <%= link_to t('view.destroy'), event_path(@event), method: :delete %>
    <% end %>
  </div>

  <div class="">
    <%= link_to 'コメントを作成', new_comment_path(event_id: @event.id), remote:true %>
  </div>
<% end %>

<div id="mask" class="hidden"></div>

<div id="comments" class="">
  <% if user_signed_in? %>
    <div id="comment_modal" class="hidden">
      <%= render 'comments/form', { comment: @comment } %>
    </div>
  <% end %>
  <div id="comments_index" class="">
    <%= render 'comments/index', { comments: @comments} %>
  </div>
</div>


<%= javascript_include_tag 'event_show' %>
