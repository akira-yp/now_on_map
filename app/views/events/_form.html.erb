

<div class="modal-wrapper p-5 container">
  <div class="row">

    <% if action_name == 'edit' %>
      <div id="mapid2" class="col" style="width:400px; height:400px;" ></div>
    <% end %>
    <div class="col">
      <%= form_with( model: event, local: true ) do |f| %>
       <% if event.errors.any? %>
         <div id="error_explanation">
           <% event.errors.full_messages.each do |msg| %>
            <p><%= msg %></p>
           <% end %>
         </div>
       <% end %>
       <div>
         <%= f.label :title %>
         <%= f.text_field :title %>
       </div>
       <div>
         <%= f.label :description %>
         <%= f.text_area :description %>
       </div>
       <div class="">
         <%= f.label :location %>
         <%= f.text_field :location %>
       </div>
       <div class="">
         <div class="">
           <%= f.label :start_date %>
           <%= f.date_field :start_date,value:Time.now.strftime("%Y-%m-%d") %>
         </div>
         <div class="">
           <%= f.label :end_date %>
           <%= f.date_field :end_date ,value:Time.now.since(7.days).strftime("%Y-%m-%d") %>
         </div>
       </div>
       <div class="">
         <%= f.label :official_page %>
         <%= f.url_field :official_page %>
       </div>
       <div class="">
         <%= f.label :image %>
         <%= f.file_field :image %>
       </div>
       <div class="">
         <%= f.hidden_field :latitude , id:"latitude" %>
         <%= f.hidden_field :longitude , id:"longitude" %>
       </div>
       <div class="">
         <% Category.all.each do |category| %>
          <%= f.check_box :category_ids, { multiple: true }, category[:id], nil %>
          <%= f.label :category_ids, category.name, value: category[:id] %>
         <% end %>
       </div>

       <div class="">
         <%= f.submit t('view.post') %>
       </div>

      <% end %>
    </div>
  </div>
</div>
