$('#show_event_modal').html('<%= j(render 'detail', { event: @event, comment:@comment }) %>');

$('#show_event_modal').removeClass('hidden');
$('#mask').removeClass('hidden');

$('#mask').on('click',function(){
  $('#show_event_modal').addClass('hidden');
  $('#mask').addClass('hidden');
});

$('.close-btn').on('click',function(){
  $('#show_event_modal').addClass('hidden');
  $('#mask').addClass('hidden');
});
